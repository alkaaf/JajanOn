<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/dummy_cover">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_avatar"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/dummy_avatar"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/img_avatar"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/img_avatar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sempol Merana"
            android:id="@+id/text_namadagang"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/img_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jual swempol swemok komes ginuk ginuk"
            android:id="@+id/text_desk"
            android:layout_below="@+id/text_namadagang"
            android:layout_alignStart="@+id/text_namadagang"
            android:textColor="@color/white"
            android:layout_toStartOf="@+id/text_rating"
            android:layout_above="@+id/text_alamat" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Jl. Mayjend Panjahitan 80"
            android:id="@+id/text_alamat"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text_desk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4.5"
            android:id="@+id/text_rating"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:layout_alignBottom="@+id/text_desk"
            android:layout_alignTop="@+id/text_desk"
            android:layout_alignEnd="@+id/text_namadagang" />
    </RelativeLayout>

</RelativeLayout>