<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/shape_rect">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout

                android:id="@+id/contNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/inNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:hint="Nama"
                    android:lines="1"
                    android:padding="3dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout


                android:id="@+id/contDagangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/contNama"
                android:layout_below="@+id/contNama"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/inDagangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:hint="Dagangan"
                    android:lines="1"
                    android:padding="3dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/contBuka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/contDagangan"
                android:layout_below="@+id/contDagangan"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/inAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:hint="Alamat"
                    android:lines="1"
                    android:padding="3dp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/contAvatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/b_avatarUpload"
                android:layout_toStartOf="@+id/b_avatarUpload">

                <EditText
                    android:id="@+id/path_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/b_avatarUpload"
                    android:layout_alignStart="@+id/contBuka"
                    android:layout_toStartOf="@+id/b_avatarUpload"
                    android:hint="Upload avatar"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/b_avatarUpload"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/contBuka"
                android:text="..."
                android:background="@color/colorPrimary"
                android:layout_margin="5dp"
                android:textColor="@color/white" />

            <android.support.design.widget.TextInputLayout

                android:id="@+id/contCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_avatarUpload"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/b_avatarUpload">

                <EditText
                    android:id="@+id/path_cover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/scrollView2"
                    android:layout_toStartOf="@+id/b_coverUpload"
                    android:hint="Upload sampul"
                    android:lines="1" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/b_coverUpload"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="..."
                android:layout_below="@+id/b_avatarUpload"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:layout_margin="5dp"
                android:textColor="@color/white" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>